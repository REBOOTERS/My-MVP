<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".JetPackActivity">

    <Button
        android:id="@+id/data_binding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DataBinding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/data_binding_livedata"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DataBinding liveData"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_binding"
         />
    <Button
        android:id="@+id/livedata_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="livedata with fragment"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_binding_livedata"
         />


</androidx.constraintlayout.widget.ConstraintLayout>